<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F0F3"
    tools:context=".TimestampActivity">

    <!-- Main Card View for a clean and modern look -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <LinearLayout
                android:id="@+id/app_header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="#0041C2"
                android:elevation="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical">

                <!-- Title of the Activity -->
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Date Difference"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Current Timestamp Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Timestamp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/unixTimestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Unix Timestamp: Loading..."
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/humanDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Date: Loading..."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Convert from Timestamp Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert Timestamp to Date"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/inputTimestampEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Unix Timestamp (e.g., 1672531200)"
                android:inputType="number"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/convertToDateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert to Date"
                android:layout_marginTop="8dp"
                android:backgroundTint="#0041C2"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp"/>

            <!-- Convert from Date Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert Date to Timestamp"
                android:textStyle="bold"
                android:textSize="18sp"

                android:layout_marginBottom="8dp"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/inputDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="YYYY-MM-DD HH:MM:SS (e.g., 2023-01-01 00:00:00)"
                android:inputType="text"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/convertToTimestampButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert to Timestamp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#0041C2"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp"/>

            <!-- Result Display -->
            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
