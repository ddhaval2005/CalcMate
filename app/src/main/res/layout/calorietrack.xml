<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Intake"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#0041C2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Input Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editText_foodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Food Name"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/editText_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Calories (e.g., 250)"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="12dp"
                android:inputType="number" />

            <Button
                android:id="@+id/button_addFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Food"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/Blue_berry"
                android:padding="14dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Calories Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView_input">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_fire"
                app:tint="#F08080"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Calories:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textView_totalCalories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0041C2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Food List Section -->
    <TextView
        android:id="@+id/textView_listTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Intake"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0041C2"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView_total" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_foodList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_listTitle">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout_foodList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- drawable/rounded_edittext.xml -->
    <ImageView
        android:id="@+id/imageView_rounded_edittext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_edittext"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- drawable/rounded_button.xml -->
    <ImageView
        android:id="@+id/imageView_rounded_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_button"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- drawable/ic_fire.xml -->
    <ImageView
        android:id="@+id/imageView_fire_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_fire"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
