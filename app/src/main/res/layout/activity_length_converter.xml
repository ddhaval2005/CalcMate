<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7FF9F6ED"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".LengthConverterActivity">

    <!-- Header for the Length Converter section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length Converter"
        android:textColor="#775137"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp" />

    <!-- Input field for the value to convert -->
    <EditText
        android:id="@+id/inputValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter length"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_edittext_bg"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:textColorHint="@color/textHintColor"/>

    <!-- Spinner for "from" unit selection -->
    <Spinner
        android:id="@+id/fromUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner_bg"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:popupBackground="@color/backgroundColor"/>

    <!-- Spinner for "to" unit selection -->
    <Spinner
        android:id="@+id/toUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner_bg"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"
        android:popupBackground="@color/backgroundColor"/>

    <!-- Button to perform the conversion -->
    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:backgroundTint="#775137"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="24dp"/>

    <!-- TextView to display the result -->
    -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/cardview_border">

        <!--
            This is your CardView, now placed inside the FrameLayout.
            The small margin on the CardView allows the border from the FrameLayout to be visible.
        -->
        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:textSize="24sp"
                android:textColor="#0041C2"
                android:textStyle="bold"
                android:gravity="center"
                android:text=""/>

        </androidx.cardview.widget.CardView>
    </FrameLayout>


</LinearLayout>